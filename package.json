{
  "name": "next-typescript-tailwind-starter",
  "description": "Starter Next.js project using TypeScript, Tailwind and some DevTools preconfigured.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production next start",
    "lint": "concurrently -s --kill-others-on-fail yarn:lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.tsx .",
    "lint:ts": "tsc --noemit",
    "lint:css": "stylelint **/*.css",
    "analyze": "NODE_ENV=production ANALYZE=true next build"
  },
  "dependencies": {
    "@next/bundle-analyzer": "12.0.3",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.3.0",
    "next": "12.0.3",
    "postcss": "^8.3.11",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "12.0.3",
    "@types/node": "^14.17.9",
    "@types/react": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.3",
    "eslint-plugin-react": "^7.26.1",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^23.0.0",
    "typescript": "^4.4.4"
  }
}
