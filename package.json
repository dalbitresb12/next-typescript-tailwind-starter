{
  "name": "next-typescript-tailwind-starter",
  "description": "Starter Next.js project using TypeScript, Tailwind and some DevTools preconfigured.",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "postinstall": "husky install",
    "lint": "concurrently -s -n lint: 'yarn:lint:*(!fix)'",
    "lint:ts": "tsc --noemit",
    "lint:eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx .",
    "lint:css": "stylelint --cache **/*.css",
    "lint:prettier": "prettier --check .",
    "lint:fix": "concurrently -s -n lint:fix: 'yarn:lint:fix:*'",
    "lint:fix:eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx --fix .",
    "lint:fix:css": "stylelint --cache --fix **/*.css",
    "lint:fix:prettier": "prettier --write ."
  },
  "dependencies": {
    "@next/bundle-analyzer": "12.1.6",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.0",
    "next": "12.1.6",
    "postcss": "^8.4.14",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "12.1.6",
    "@tailwindcss/forms": "^0.5.2",
    "@types/node": "^16.11.36",
    "@types/prettier": "^2",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.css": "stylelint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md,yml,json}": "prettier --write"
  }
}
